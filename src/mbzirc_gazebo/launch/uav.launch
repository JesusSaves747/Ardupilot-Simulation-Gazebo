<?xml version="1.0" ?>
<launch>
  <arg name="model" default="$(find mbzirc_gazebo)/models/hexacopter/model.sdf" />
  <arg name="x" default="0" />
  <arg name="y" default="0" />
  <arg name="z" default="0" />
  <arg name="R" default="0" />
  <arg name="P" default="0" />
  <arg name="Y" default="0" />
  <arg name="name" default="hexacopter" />
  <arg name="ns" default="uav" />
  <!-- Spawn a robot into Gazebo -->
  <!-- <node name="uav" pkg="gazebo_ros" type="spawn_model" args="-file $(find mbzirc_gazebo)/models/hexacopter/model.sdf -sdf -z 1 -model hexacopter" /> -->

  <node name="$(arg name)" pkg="gazebo_ros" type="spawn_model"
    args="-file $(find mbzirc_gazebo)/models/hexacopter/model.sdf
          -sdf
          -x '$(arg x)'
          -y '$(arg y)'
          -z '$(arg z)'
          -R '$(arg R)'
          -P '$(arg P)'
          -Y '$(arg Y)'
          -model $(arg name)"
    respawn="false" output="screen" />

</launch>
